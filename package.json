{
  "name": "canvas-mcp",
  "version": "3.0.0",
  "description": "MCP server that connects Claude to Canvas LMS - manage coursework through natural conversation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "check": "npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "mcp",
    "canvas",
    "lms",
    "claude",
    "ai",
    "education",
    "university",
    "assignments",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucanardinocchi/canvas-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.5",
    "officeparser": "^6.0.4",
    "pdf-parse": "^2.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^20.11.0",
    "@types/pdf-parse": "^1.1.5",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
